<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avigezerit.myfaves.ManageFavActivity">

    <ScrollView
        android:id="@+id/formSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="@drawable/horiz_space_20"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:showDividers="middle">

            <TextView
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Details" />


            <EditText
                android:id="@+id/mNameET"
                style="@style/smallText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name your fav location" />

            <EditText
                android:id="@+id/mDescET"
                style="@style/smallText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Describe your fav location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mPositionTV"
                    style="@style/smallText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="" />

                <Button
                    android:id="@+id/useLocationBtn"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="GET My current Location"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <Button
                android:id="@+id/getLocationAgainBTN"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="-28dp"
                android:text="Wrong position? try again"
                android:textAlignment="textStart"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/mPicRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mPicIV"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo_ph" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Take picture" />

            </RelativeLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/saveBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:text="SAVE"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/headerFragmentLL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" />

</RelativeLayout>
