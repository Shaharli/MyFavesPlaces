<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avigezerit.myfaves.viewFavFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/mPicIV"
        android:src="@drawable/photo_ph"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mPicIV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ColorMultiply"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        android:paddingBottom="26dp"
        android:showDividers="middle"
        android:divider="@drawable/horiz_space_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTV"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Title"
            style="@style/title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flDescTV"
            android:text="Description"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/smallText"
            android:maxLines="3"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flAddressTV"
            android:text="Address"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/smallText"
            android:maxLines="3"
            android:ellipsize="end"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/fragment" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="NAVIGATE"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/white"
        android:elevation="3dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
